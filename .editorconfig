root = true

[*.{hs,cabal,yaml,md,sh,c++,h++,css,nix,project}]
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{hs,yaml,md,c++,h++,nix}]
max_line_length = 100

[*.css]
max_line_length = 80

[*.md]
trim_trailing_whitespace = false

[{*.sh,Makefile}]
max_line_length = 80
indent_style = tab
indent_size = 4
